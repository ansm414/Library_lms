<h3 class="font-weight-bold text-center text-info mt-3">All Your Approved Requests</h3>

 <table class="table table-striped">
    <thead>
      <tr>
      
        <th>Book</th>
        <th>Author</th>
        <th>Issue Date</th>
        <th>Return date </th>
        <th>Returned </th>
        <th>User Returned date </th>
        <th>Image </th>

      </tr>
    </thead>
    <tbody>


        <% @books.each do |book| %>
        <tr>
        

        <td>  <%=  book.book.name %></td>
        <td>  <%=  book.book.author %></td>
        <td>  <%=  book.issue_date.to_date %></td>
        
        <td>  <%=  book.return_date.to_date %></td>
        <% if book.returned==true%>
        <td> <p>Yes</p></td>
        <%else%>
        <td> <p>Pending</p></td>
        <%end%>
        <% if book.user_returned_date.nil?%>
        <td> </td>
        <%else%>
        <td>  <%=  book.user_returned_date.to_date %></td>
        <%end%>
        <td>  <%= image_tag(book.book.book_image, style:'height:30px;width:30px;', class: 'rounded') %></td>


    <% if book.returned==true %>
     <td> <a href="returnbook/<%= book.id%>" class="btn btn-sm btn-warning disabled"> Return Book</a></td>

     <%else%>
     <td> <a href="returnbook/<%= book.id%>" class="btn btn-sm btn-warning "> Return Book</a></td>
     <%end%>
      </tr>

    <%end%>

    </tbody>
  </table>




