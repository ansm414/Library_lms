 <table class="table table-striped">
    <thead>
      <tr>
      
        <th>Book</th>
        <th>Author</th>
        <th>Requester</th>
        <th>Status</th>
        <th>Available</th>
        <th>Image</th>


        




      </tr>
    </thead>
    <tbody>


        <% @books.each do |book| %>
        <tr>
        

        <td>  <%=  book.book.name %></td>
        <td>  <%=  book.book.author %></td>
        <td>  <%=  book.user.name %></td>

        
        <td>  <%=  book.status  %></td>
        <td>  <%=  book.book.available  %></td>
        <td> <%= image_tag(book.book.book_image, style:'width:30px;height:30px;') %></td>

       
        <% if book.status ==="approved" %>
      <td> <%= link_to "Approve",  admins_path(book), class: 'btn btn-sm btn-success disabled'%>
      <td> <%= link_to "Reject", "/admins/rejectdata/"+book.id.to_s, class: 'btn btn-sm btn-danger disabled' %>
      <%elsif book.status==="rejected"%>
      <td> <%= link_to "Approve",  admins_path(book), class: 'btn btn-sm btn-success disabled' %>
      <td> <%= link_to "Reject", "/admins/rejectdata/"+book.id.to_s, class: 'btn btn-sm btn-danger disabled' %>
      <%else%>
      <td> <%= link_to "Approve",  admins_path(book), class: 'btn btn-sm btn-success ' %>
      <td> <%= link_to "Reject", "/admins/rejectdata/"+book.id.to_s, class: 'btn btn-sm btn-danger' %>
      <%end%>
      

      
      
      



      </tr>
  

    <%end%>



     

    </tbody>
  </table>


