<div class="text-center">
<%= search_form_for [:admins,@q] do |f| %>
<div class="form-group">
  <%= f.label :status_cont %>
  <%= f.search_field :status_cont , class: "form-control"%>
  </div>
  <%= f.submit %>
<% end %>
</div>

<h1>I am admin </h1>

 <table class="table table-striped">
    <thead>
      <tr>
      <th>Requested ID </th>
        <th>Book Name</th>
        <th>Author Name</th>
        <th>Book Id</th>
        <th>User Id</th>
        <th>Status</th>
        <th>Available</th>



        




      </tr>
    </thead>
    <tbody>


        <% @books.each do |book| %>
        <tr>
        <td>  <%=  book.id %></td>

        <td>  <%=  book.book.name %></td>
        <td>  <%=  book.book.author %></td>
        <td>  <%=  book.book_id %></td>

        <td>  <%=  book.user_id %></td>
        <td>  <%=  book.status  %></td>
        <td>  <%=  book.book.available  %></td>

       
        <% if book.status ==="approved" %>
      <td> <%= link_to "Approve",  admins_path(book), class: 'btn btn-sm btn-success disabled'%>
      <td> <%= link_to "Reject", "/admins/rejectdata/"+book.id.to_s, class: 'btn btn-sm btn-danger disabled' %>
      <%elsif book.status==="rejected"%>
      <td> <%= link_to "Approve",  admins_path(book), class: 'btn btn-sm btn-success disabled' %>
      <td> <%= link_to "Reject", "/admins/rejectdata/"+book.id.to_s, class: 'btn btn-sm btn-danger disabled' %>
      <%else%>
      <td> <%= link_to "Approve",  admins_path(book), class: 'btn btn-sm btn-success ' %>
      <td> <%= link_to "Reject", "/admins/rejectdata/"+book.id.to_s, class: 'btn btn-sm btn-danger' %>
      <%end%>
      

      
      
      



      </tr>
  

    <%end%>



     

    </tbody>
  </table>


 <div style="display:flex;justify-content:center;">
  <%= paginate @books %>
  </div>

